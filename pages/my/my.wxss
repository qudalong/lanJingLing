page{
  background: #f9fafd;
}

.cell-group{
  margin:10rpx 0 0 4%;
  width: 92%;
  box-shadow: 1px 1px 5px #ccc,-1px -1px 3px #ccc;
  border-radius: 6rpx;
  background: #fff;
}
.row{
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.card{
  margin: 1%;
  width: 98%;
  height: 300rpx;
}
.abs{
  box-sizing: border-box;
  position: absolute;
  top: 50%;
  line-height: 1.6;
  color: #fff;
  width: 100%;
  padding: 0 40rpx;
  transform: translateY(-50%);
}