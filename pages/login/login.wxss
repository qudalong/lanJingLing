.login {
  width: 80%;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.login .inp {
  width: 100%;
  height: 102rpx;
  line-height: 102rpx;
  background: #50b3fe;
  color: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.btn {
  text-align: center;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 20rpx;
  padding: 30rpx 0;
  margin-top: 80rpx;
  background: #10a4fe;
}

.logo {
  width: 88%;
