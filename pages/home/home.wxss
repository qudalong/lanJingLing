.indexBg {
	height: 180rpx;
	width: 100%;
}

.sinle {
	background: #C5ADF7;
	height: 74px;
	line-height: 74px;
	border-radius: 4px;
	width: 95%;
	margin-left: 50% !important;
	transform: translateX(-50%);
	box-shadow: 1px 1px 1px #f0f0f0;
}

.row {
	margin: 10rpx 2% 0;
	box-sizing: border-box;
}

.abs {
	font-size: 40rpx;
	box-sizing: border-box;
	width: 100%;
	color: #fff;
	padding: 0 40px;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.yellow {
	color: fff;
	flex: 1;
	text-align: right;
}

.flx1 {
	flex: 3;
}

.picker-wrap {
	padding: 10rpx;
	font-size: 14px;
	border-radius: 10rpx;
	margin: 20rpx 8rpx;
	background: #fff;
	box-shadow: 1px 1px 3px #ccc;
}

.picker-wrap .inp {
	flex: 1;
	position: relative;
	padding: 10rpx 0;
	background: #fff;
	padding-right: 38rpx;
	text-align: right;
}

.down {
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	right: 20rpx;
}

/* 控制按钮 */
.btn-fiexd {
	position: fixed;
	left: 0;
	bottom: 40%;
	width: 100%;
	z-index: 999999 !important;
}

.radio-group {
	display: flex;
	align-items: center;
	justify-content: space-between;
	width: 120px;
	margin-left: 50%;
	transform: translateX(-50%);
	background: #ccc;
}
